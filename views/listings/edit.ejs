<% layout("/layouts/boilerplate") %>

    <h3 class="head">Edit Listing</h3>
    
    <!-- npm i method-override -->
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="form-div">
            <label for="title">Title : </label>
            <input type="text" class="form-control" id="title" value="<%= listing.title %>" name="listing[title]">
        </div>

        <div class="form-div">
            <label for="desc" class="form-label">Description : </label>
            <textarea class="form-control" id="desc" rows="5" cols="100" name="listing[description]"><%= listing.description %></textarea>
        </div>

        <div class="form-div">
            <label for="img" class="form-label">Image : </label>
            <input type="text" class="form-control" id="img" value="<%= listing.image %>" name="listing[image]">
        </div>

        <div class="form-div">
            <label for="price" class="form-label">Price : </label>
            <input type="number" class="form-control" id="price" value="<%= listing.price %>" name="listing[price]">
        </div>

        <div class="form-div">
            <label for="loc" class="form-label">Location : </label>
            <input type="text" class="form-control" id="loc" value="<%= listing.location %>" name="listing[location]">
        </div>

        <div class="form-div">
            <label for="country" class="form-label">Country : </label>
        <input type="text" class="form-control" id="country" value="<%= listing.country %>" name="listing[country]">
        </div>


        <button class="btn btn-dark">Edit</button> <br><br>
    </form>
